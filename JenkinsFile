pipeline {
    agent any

    environment {
        GITHUB_CREDENTIAL_ID = 'github-token' // あなたが設定した GitHub 認証 ID
    }

    stages {
        stage('Checkout') {
            steps {
                echo "=== Checkout Stage: 開始 ==="
                git credentialsId: "${env.GITHUB_CREDENTIAL_ID}", url: 'https://github.com/Hoshino-Koki1/iplass-skeleton-test.git', branch: 'master'
                echo "=== Checkout Stage: 完了 ==="
            }
        }

                stage('Clean') {
            steps {
                echo "=== Clean Stage: 開始 ==="
                sh './gradlew clean'
                echo "=== Clean Stage: 完了 ==="
            }
        }

        stage('Build') {
            steps {
                echo "=== Gradle ビルド: 開始 ==="
                sh './gradlew clean build'
                echo "=== Gradle ビルド: 完了 ==="
            }
        }
    }
}